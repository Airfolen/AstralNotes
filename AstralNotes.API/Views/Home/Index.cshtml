@model IEnumerable<AstralNotes.Domain.Notes.Models.NoteShortModel>
@{
    ViewData["Title"] = "Home Page";
}
 
<div class="NotesGallery">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="row">
            @foreach (var note in Model)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail">
                        <img src="http://localhost:5000/Avaters/@note.FileGuid" alt="@note.FileGuid">
                        <div class="caption">
                            <div class="NoteText">@note.Description</div>
                            <div>
                                <form class="" type="hidden" asp-controller="Note" asp-action="GetNote" asp-route-noteGuid="@note.NoteGuid" method="post">
                                    <button type="submit" class="btn btn-primary">
                                        Просмотреть
                                    </button>
                                </form>
                            
                                <form class="" type="hidden" asp-controller="Note" asp-action="Delete" asp-route-id="@note.NoteGuid" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        Удалить
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }    
    else
    {
        <div class="WelcomeText thumbnail">
            <h2 class="text-center">Добро пожаловать на сайт AstralNotes, чтобы воспользоваться сервисом для заметок авторизируйтесь</h2>
        </div>
       
    }

</div>