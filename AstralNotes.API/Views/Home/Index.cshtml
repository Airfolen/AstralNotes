@model AstralNotes.API.ViewModels.HomeView
@inject AstralNotes.Domain.Notes.INoteService NoteService
@{
    ViewData["Title"] = "Home Page";
}
 
<div class="NotesGallery">
    @if (User.Identity.IsAuthenticated)
    {
        <form method="get">
            <div class="form-inline form-group">
                @Html.TextBox("Search", Model.NoteFilter.Search, htmlAttributes: new {@class = "form-control", @placeholder="Поиск по содержимому..."})
                <input type="submit" value="Поиск" class="btn btn-default"/>
            </div>
        </form>
        
        <div class="NoteList">
            @foreach (var note in Model.NoteModels)
            {
                <div class="Note">
                    <a href="http://localhost:5000/Note/@note.NoteGuid">
                        <img src="http://localhost:5000/Avaters/@note.FileGuid" /> 
                    </a>
                    <a href="http://localhost:5000/Note/@note.NoteGuid" class="NoteTitle caption">
                        <h3>@note.Title</h3>
                    </a>
                    <div class="NoteText">@note.Description</div>
                    <div class="NoteFooter">
@*                        <form class="NoteFooter" type="hidden" asp-controller="Note" asp-action="Delete" asp-route-id="@note.NoteGuid" method="post">*@
@*                            <button type="submit" class="btn btn-sm btn-danger" onclick="">*@
@*                                Удалить*@
@*                            </button>*@
@*                        </form>*@
                       
                        <a href="http://localhost:5000/Note/Delete/@note.NoteGuid">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Удалить
                            </button>
                        </a>
                        <span>@note.CreationDate.ToString("d")</span>
                    </div>
                </div>
            }
        </div>
    }    
    else
    {
        <div class="WelcomeText thumbnail">
            <h2 class="text-center">Добро пожаловать на сайт AstralNotes для того, чтобы воспользоваться сервисом для заметок авторизируйтесь</h2>
        </div>
       
    }

</div>