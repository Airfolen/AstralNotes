@using AstralNotes.Database.Enums
@model AstralNotes.Domain.Notes.Models.NoteInfo


<div class="clearfix">
    <h2 class="TextForm col-md-6 col-md-offset-3">Создание заметки</h2>
    <form class="TextForm col-md-6 col-md-offset-3" method="post" asp-controller="Note" asp-action="Create">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="form-group">
            <label asp-for="Title"></label><br />
            <input asp-for="Title" class="form-control" placeholder="Введите заголовок заметки"/>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content"></label><br />
            <input asp-for="Content" class="form-control" placeholder="Введите содержимое заметки"/>
            <span asp-validation-for="Content"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category"></label><br /> 
            <select asp-for="Category"  class="form-control">
                <option value="@NoteCategory.General">Общая</option>
                <option value="@NoteCategory.Diary">Ежедневник</option>
                <option value="@NoteCategory.Work">Работа</option>
            </select>
        </div>
        <button type="submit" class="btn btn-default">Создать</button>
    </form>
</div>